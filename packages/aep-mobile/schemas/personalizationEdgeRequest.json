{
  "$id": "http://griffon.adobe.com/schemas/aep-mobile/personalizationEdgeRequest",
  "shortDesc": "Edge Personalization Request",
  "group": "event",
  "allOf": [{ "$ref": "http://griffon.adobe.com/schemas/aep-mobile/edgeRequest" }],
  "type": "object",
  "properties": {
    "payload": {
      "inherit": true,
      "type": "object",
      "properties": {
        "ACPExtensionEventData": {
          "inherit": true,
          "type": "object",
          "properties": {
            "xdm": {
              "inherit": true,
              "type": "object",
              "properties": {
                "eventType": {
                  "description": "The type of event on the edge to execute",
                  "alias": "edgeEventType",
                  "type": "string",
                  "const": "personalization.request"
                }
              },
              "required": [ "eventType" ]
            },
            "query": {
              "inherit": true,
              "type": "object",
              "properties": {
                "personalization": {
                  "description": "The personalization details",
                  "type": "object",
                  "properties": {
                    "decisionScopes": {
                      "description": "List of decision scopes to load",
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [ "decisionScopes" ]
                }
              },
              "required": [ "personalization" ]
            }
          },
          "required": [ "xdm", "query" ]
        }
      },
      "required": [
        "ACPExtensionEventData"
      ]
    }
  }
}