{
  "$id": "http://griffon.adobe.com/schemas/event",
  "shortDesc": "Root Griffon Event",
  "type": "object",
  "properties": {
    "annotations": {
      "description": "Array of {@link Annotation} objects",
      "type": "array"
    },
    "clientId": {
      "description": "A unique id that differentiates clients from one another",
      "mock": "appleABC",
      "type": "string"
    },
    "payload": {
      "description": "An object with custom data describing the event",
      "type": "object"
    },
    "timestamp": {
      "description": "When the event occurred",
      "mock": "Date.parse('12 Jan 2020 07:23:17 GMT')",
      "type": "number"
    },
    "type": {
      "alias": "rootType",
      "description": "The type of event",
      "type": "string",
      "mock": "generic",
      "enum": ["blob", "control", "generic", "log", "status"]
    },
    "uuid": {
      "alias": "rootId",
      "description": "Uniquely identifies each event",
      "mock": "123",
      "type": "string"
    }
  },
  "required": [
    "clientId", "timestamp", "type", "uuid"
  ]
}
