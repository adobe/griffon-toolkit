{
  "$id": "http://griffon.adobe.com/schemas/configUpdateCommand",
  "shortDesc": "Config Update Command",
  "allOf": [{ "$ref": "http://griffon.adobe.com/schemas/command" }],
  "type": "object",
  "properties": {
    "payload": {
      "inherit": true,
      "type": "object",
      "properties": {
        "type": {
          "description": "The type of command",
          "type": "string",
          "const": "configUpdate"
        },
        "detail": {
          "description": "Object containing the config paths and values to update",
          "type": "object"
        }
      },
      "required": [
        "type", "detail"
      ]
    },
    "vendor": {
      "inherit": true,
      "type": "string",
      "const": "com.adobe.griffon.mobile"
    }
  }
}
